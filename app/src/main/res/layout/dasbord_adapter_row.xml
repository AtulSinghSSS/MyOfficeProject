<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#28F44336">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:padding="10dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/AssignmentId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:text="Assignment Id"
                    android:textColor="@color/black"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tvAssignmentId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AssignmentId"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    android:textSize="12dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdvAccept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/tvAccept"
                        android:layout_width="110dp"
                        android:layout_height="25dp"
                        android:background="#4CAF50"
                        android:text="Accept"
                        android:fontFamily="sans-serif-black"
                        android:textSize="15dp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdvReject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/tvReject"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:background="#F44336"
                    android:fontFamily="sans-serif-black"
                    android:text="Reject"
                    android:gravity="center"
                    android:textSize="15dp"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"

                    android:text="Amount"
                    android:textColor="@color/black"
                    android:textSize="12dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"

                    android:text="Status"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"

                    android:text="0.0"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif-black"/>

                <TextView
                    android:id="@+id/tvCreateDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:text="01/09/2022"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif-black"/>

                <TextView
                    android:id="@+id/tvAssignmentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:text="status"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif-black"/>
            </RelativeLayout>


        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
